---
import { Icon } from "astro-icon";

const socialLinks = [
	{
		name: "mdi:github",
		friendlyName: "Github",
		link: "https://github.com/adithyaakrishna",
	},
	{
		name: "mdi:twitter",
		friendlyName: "Mastodon",
		link: "https://twitter.com/adii_kris",
	},
	{
		name: "mdi:linkedin",
		friendlyName: "LinkedIn",
		link: "https://linkedin.com/in/adiiikris",
	},
	{
		name: "mdi:email",
		friendlyName: "email",
		link: "mailto:adithyakris@gmail.com",
	},
];
---

<div class="flex flex-wrap items-end gap-x-4 mt-8" style="align-items: center;">
	<p>find me on</p>
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		{
			socialLinks.map(({ link, name, friendlyName }) => {
				const isEmail = name.includes("email") || friendlyName.toLowerCase().includes("email");
				return (
					<li class="flex">
						<a
							class="inline-block p-1 sm:hover:text-link"
							href={link}
							target="_blank"
							rel={`noopener noreferrer me ${isEmail ? "authn" : ""}`}
						>
							<Icon class="h-6 w-6" name={name} aria-hidden="true" focusable="false" />
							<span class="sr-only">{friendlyName}</span>
						</a>
					</li>
				);
			})
		}
	</ul>
</div>
